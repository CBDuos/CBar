<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical"
    tools:context=".Share">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="?attr/textcolor"
            android:text="Please spread a word about us. Share with all your friends in the DSB College."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="?attr/textcolor"
            android:text="You can check out our Official Facebook Page/Blog to know more about us."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="Facebook Page"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="  :   "/>

            <TextView
                android:autoLink="all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginRight="35dp"
                android:text="CollegeBar"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/buttonFB"
                android:src="@drawable/like"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/button_round"
                app:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:tint="@color/white"
                app:elevation="0dp"
                app:fabSize="mini"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="Blog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="  :   "/>

            <TextView
                android:autoLink="all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="www.thecollegebar.blogspot.com"/>

        </LinearLayout>


        <TextView
            android:autoLink="all"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textColor="?attr/textcolor"
            android:text="Tap on the icon below to Share CollegeBar with your Friends."/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonShare"
            android:src="@drawable/share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_round"
            app:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:tint="@color/white"
            app:elevation="0dp"
            app:fabSize="mini"
            />



    </LinearLayout>

</LinearLayout>