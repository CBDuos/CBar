<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical"
    tools:context=".ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:textSize="16dp"
            android:text="If you want to provide any feedback, suggestions or report any bug. You can contact us on our accounts."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginBottom="10dp"
                android:text="Message"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginBottom="10dp"
                android:text=" : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="CollegeBar (Admin Account)"/>

            <Button
                android:id="@+id/button"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/button_round"
                android:text="Help"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginBottom="10dp"
                android:text="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:text="  :   "/>

            <TextView
                android:autoLink="email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:text="contact.collegebar@gmail.com"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="Facebook Page"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="  :   "/>

            <TextView
                android:autoLink="all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:layout_marginRight="35dp"
                android:text="CollegeBar"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/buttonFB"
                android:src="@drawable/like"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/button_round"
                app:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:tint="@color/white"
                app:elevation="0dp"
                app:fabSize="mini"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="?attr/textcolor"
                android:text="Blog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="  :   "/>

            <TextView
                android:autoLink="all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="www.thecollegebar.blogspot.com"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/textcolor"
            android:text="These above accounts are our only official accounts. Contact us via these means only."/>

    </LinearLayout>

</LinearLayout>